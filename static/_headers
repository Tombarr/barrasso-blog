# Cache headers for production deployment
# Works with Netlify, Vercel, and Cloudflare Pages
# Place in static/ directory - Hugo copies to public/ during build

# Cache fingerprinted assets aggressively (CSS, JS with hash in filename)
/css/*
  Cache-Control: public, max-age=31536000, immutable
/js/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year (they rarely change)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Cache images for 1 week (allows updates without waiting too long)
/images/*
  Cache-Control: public, max-age=604800

# Cache company logos for 1 month
/images/company-logos/*
  Cache-Control: public, max-age=2592000

# Cache favicon and other static assets for 1 week
/favicon.ico
  Cache-Control: public, max-age=604800
/*.png
  Cache-Control: public, max-age=604800
/*.jpg
  Cache-Control: public, max-age=604800
/*.jpeg
  Cache-Control: public, max-age=604800
/*.svg
  Cache-Control: public, max-age=604800
/*.webp
  Cache-Control: public, max-age=604800

# HTML pages - short cache for frequent updates, must revalidate
/*
  Cache-Control: public, max-age=3600, must-revalidate

# RSS feed - cache for 1 hour
/index.xml
  Cache-Control: public, max-age=3600

# Search index - cache for 1 hour
/search.json
  Cache-Control: public, max-age=3600

# Security headers for all pages
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
