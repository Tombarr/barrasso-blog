{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Hugo Server",
      "type": "shell",
      "command": "hugo server --bind 0.0.0.0 --disableFastRender --noHTTPCache",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Web Server is available at",
          "endsPattern": "Press Ctrl+C to stop"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
