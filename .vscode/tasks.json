{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch CSS (Tailwind + PostCSS)",
      "type": "shell",
      "command": "make run-css",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Rebuilding..."
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Start Hugo Server",
      "type": "shell",
      "command": "make run-site",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Watching for changes",
          "endsPattern": "Web Server is available at"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Start Development Server",
      "dependsOn": [
        "Watch CSS (Tailwind + PostCSS)",
        "Start Hugo Server"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Check Typos",
      "type": "shell",
      "command": "typos",
      "problemMatcher": {
        "owner": "typos",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+`(.*)` should be `(.*)`",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "checks"
      }
    },
    {
      "label": "Watch Typos",
      "type": "shell",
      "command": "while true; do clear; typos; sleep 5; done",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typos",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+`(.*)` should be `(.*)`",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*$",
          "endsPattern": ".*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "checks"
      }
    },
    {
      "label": "Fix Typos",
      "type": "shell",
      "command": "typos --write-changes",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "checks"
      }
    }
  ]
}
